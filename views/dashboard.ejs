<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UNO Game System Admin</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css">
    <link rel="icon" href="/UNO.icon" type="image/x-icon">
    <script defer src="/script.js"></script>
</head>
<body>
    <div id="grid-container">

        <!-- Header Section  -->
        <%- include("partials/header") %>

        <!-- Sidebar Section  -->
        <%- include("partials/sidebar") %>

        <!-- Main Section -->
        <main class="grid-main">
            <div class="main-header" data-main-header>
                <h2 class="main-header-title" data-main-header-title>DASHBOARD</h2>
                <div class="main-cards">
                    <div class="card">
                        <div class="card-inner">
                            <p>Active Players</p>
                            <i class="bx bx-user-pin" aria-label="Active Players"></i>
                        </div>
                        <span><%= locals.activePlayers %></span>
                    </div>
                    <div class="card">
                        <div class="card-inner">
                            <p>Active Events</p>
                            <i class="bx bx-calendar-event" aria-label="Active Events"></i>
                        </div>
                        <span><%= locals.activeEvents %></span>
                    </div>
                    <div class="card">
                        <div class="card-inner">
                            <p>Active Matches</p>
                            <i class="bx bx-joystick" aria-label="Active Matches"></i>
                        </div>
                        <span><%= locals.activeMatches %></span>
                    </div>
                    <div class="card">
                        <div class="card-inner">
                            <p>Revenue</p>
                            <i class="bx bx-money" aria-label="Revenue"></i>
                        </div>
                        <span><%= locals.revenue %></span>
                    </div>
                </div>
            </div>

            <div class="main-body" data-main-body>
                <div class="table-container-primary">
                    <div class="main-body-header">
                        <h2 class="main-title">Recent Players</h2>
                        <div class="table-button-list">
                            <select name="selector" id="selector" class="dropdown" data-pointer-not-allowed>
                                <option value="Filter">Filter</option>
                                <option value="Total Wins">Total Wins</option>
                                <option value="Total Game Count">Total Game Count</option>
                                <option value="Win Rate">Win Rate</option>
                                <option value="Experience Point">Experience Point</option>
                                <option value="Country">Country</option>
                            </select>
                            <button class="table-btn add-btn" onclick="showCreatePlayerModal()" data-pointer-not-allowed><i class="bx bx-plus"></i>Add Player</button>
                            <button class="table-btn" onclick="viewAll()" data-pointer-not-allowed>View All</button>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Total Wins</th>
                                <th>Total Game Count</th>
                                <th>Win Rate</th>
                                <th>Experience Points</th>
                                <th>Country</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% locals.recentPlayers.forEach(element => { %>
                                <tr>
                                    <td><%= element.username %></td>
                                    <td><%= element.totalWin %></td>
                                    <td><%= element.totalGameCount %></td>
                                    <td><%= element.winRate %></td>
                                    <td><%= element.experiencePoint %></td>
                                    <td><%= element.country %></td>
                                    <td>
                                        <i class="bx bxs-edit edit" aria-label="Edit" onclick="showEditPlayerModal('<%= element.username %>')" data-edit data-pointer-not-allowed ></i>
                                        <i class="bx bx-trash delete" aria-label="Delete" onclick="showDeleteItemModal('<%= element.username %>')" data-delete data-pointer-not-allowed></i>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="modal delete-item-modal" data-delete-item-modal>
                <h1>&#9888</h1>
                <h2>Are you sure?</h2>
                <p>This action cannot be undone. All values <br> associated with this field will be lost.</p>
                <button class="btn modal-btn-delete" type="button" data-conform-delete>Delete Player</button>
                <button class="btn modal-btn-cancel" type="button" onclick="hideDeleteItemModal()">Cancel</button>
            </div>

            <form class="modal edit-item-modal" action="/dashboard" method="PUT" data-edit-player-modal>
                <div class="modal-header">
                    <h2>Edit Player</h2>
                    <button class="close-btn" type="button" onclick="hideEditPlayerModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="modal-fields">
                        <label for="usernameEdit">Username: </label>
                        <input type="text" id="usernameEdit" name="username" autocomplete="username" aria-label="Username" data-username-edit>
                    </div>
                    <div class="modal-fields">
                        <label for="emailEdit">Email: </label>
                        <input type="email" id="emailEdit" name="email" autocomplete="email" aria-label="Email" data-email-edit>
                    </div>
                    <div class="modal-fields">
                        <label for="newPasswordEdit">New Password: </label>
                        <input type="password" id="newPasswordEdit" name="newPassword" autocomplete="new-password" placeholder="(Unchanged if empty)" aria-label="New Password">
                    </div>
                    <div class="modal-fields">
                        <label for="confirmPasswordEdit">Confirm Password: </label>
                        <input type="password" id="confirmPasswordEdit" name="confirmPassword" autocomplete="new-password" placeholder="(Re-enter new password)" aria-label="Confirm Password">
                    </div>
                    <div class="modal-fields">
                        <label for="countryEdit">Country: </label>
                        <select id="countryEdit" name="country" class="dropdown" data-country-edit>
                            <option value="Canada">Canada</option>
                            <option value="USA">USA</option>
                            <option value="China">China</option>
                            <option value="Japan">Japan</option>
                            <option value="India">India</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn modal-btn-confirm" type="submit">Update</button>
                    <button class="btn modal-btn-cancel" type="button" onclick="hideEditPlayerModal()">Cancel</button>
                </div>
            </form>
                    
            <form class="modal create-item-modal" action="/dashboard" method="POST" data-create-player-modal>
                <div class="modal-header">
                    <h2>Create New Player</h2>
                    <button class="close-btn" type="button" onclick="hideCreatePlayerModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="modal-fields">
                        <label for="usernameCreate">Username: </label>
                        <input type="text" id="usernameCreate" name="username" autocomplete="username" placeholder="e.g. Amazing Designer" aria-label="Username" data-save-input>
                    </div>
                    <div class="modal-fields">
                        <label for="passwordCreate">Password: </label>
                        <input type="password" id="passwordCreate" name="password" autocomplete="new-password" placeholder="e.g. Coding Everyday &#129323" aria-label="Password" data-save-input>
                    </div>
                    <div class="modal-fields">
                        <label for="confirmPasswordCreate">Confirm Password: </label>
                        <input type="password" id="confirmPasswordCreate" name="confirmPassword" autocomplete="new-password" placeholder="(Re-enter password)" aria-label="Confirm Password" data-save-input>
                    </div>
                    <div class="modal-fields">
                        <label for="emailCreate">Email: </label>
                        <input type="email" id="emailCreate" name="email" autocomplete="email" placeholder="e.g. xxx@student.ubc.ca" aria-label="Email" data-save-input>
                    </div>
                    <div class="modal-fields">
                        <label for="countryCreate">Country: </label>
                        <select id="countryCreate" name="country" class="dropdown" data-save-input>
                            <option value="Canada">Canada</option>
                            <option value="USA">USA</option>
                            <option value="China">China</option>
                            <option value="Japan">Japan</option>
                            <option value="India">India</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn modal-btn-confirm" type="submit">Register</button>
                    <button class="btn modal-btn-cancel" type="button" onclick="hideCreatePlayerModal()">Cancel</button>
                </div>
            </form>
            
            <% if (locals.messages.error) { %>
                <div class="modal-error-message" data-modal-error-message> &#9888 <%= locals.messages.error[0] %> </div>
            <% } %>
        </main>

        <!-- Footer Section -->
        <%- include("partials/footer") %>
    </div>
</body>
</html>

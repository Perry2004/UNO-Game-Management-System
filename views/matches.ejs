									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>

				<!-- Search Result Section -->
				<div class="search-result" data-search-result></div>
			</main>

			<!-- Footer Section -->
			<%- include("partials/footer") %>
		</div>
	</body>
</html>
